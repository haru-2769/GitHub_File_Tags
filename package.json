{
  "name": "github_file_tags",
  "version": "0.1.0",
  "description": "A Chrome extension to tag files on GitHub using TypeScript and Webpack.",
  "license": "MIT",
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/haru-2769/GitHub_File_Tags.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --mode=production",
    "build:dev": "cross-env NODE_ENV=development webpack --mode=development",
    "watch": "cross-env NODE_ENV=development webpack --mode=development --watch",
    "dev:reload": "web-ext run --target=chromium --source-dir build --keep-profile-changes --start-url https://github.com/haru-2769/GitHub_File_Tags",
    "start": "npm run build:dev && run-p watch dev:reload",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint \"src/ts/**/*.ts\"",
    "lint:fix": "eslint \"src/ts/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.{ts,js,css,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,css,json,md}\"",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.289",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "copy-webpack-plugin": "^10.2.4",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "mini-css-extract-plugin": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "terser-webpack-plugin": "^5.3.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "web-ext": "^8.3.0",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "keywords": [
    "Chrome Extension",
    "TypeScript",
    "Webpack",
    "GitHub"
  ],
  "dependencies": {
    "selector-observer": "^2.1.6"
  },
  "lint-staged": {
    "src/**/*.{ts,css}": "prettier --write",
    "src/**/*.{ts}": "eslint --fix"
  }
}
